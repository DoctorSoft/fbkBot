
@{
    ViewBag.Title = "Index";
}
@model Services.ViewModels.HomeModels.AccountSettingsModel

<h2>Account Page</h2>

@using (Html.BeginForm("UpdateOptionsSettings", "Account", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-body">

            <div class="panel panel-primary">
                <div class="panel-heading">Geo Options</div>

                <div class="col-md-7 panel-body">
                    <div class="input-group">
                        <span class="width-200 input-group-addon">Current residence:</span>
                        @Html.TextBoxFor(o => Model.LivesPlace, new { @class = "form-control" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="width-200 input-group-addon">Current place of study:</span>
                        @Html.TextBoxFor(o => Model.SchoolPlace, new { @class = "form-control" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="width-200 input-group-addon">Current job:</span>
                        @Html.TextBoxFor(o => Model.WorkPlace, new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-md-4 panel-body">
                    <div class="input-group">
                        <span class="input-group-addon">Gender:</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" class="btn btn-success" value="Сохранить"/>
        </div>
    </div>

    <div>
        <a href="@Url.Action("Index", "Users")" class="btn btn-primary"> <i class="fa fa-arrow-left"></i> Back to list </a>
    </div>
    
    @Html.HiddenFor(model => model.AccountId)
}
