@{
    ViewBag.Title = "Index";
}

@using WebApp.Resources.Views.Cookies
@model Services.ViewModels.AccountModels.CookiesViewModel

<div class="panel panel-default">
    <div class="page-header">
        <h3>
            <span class="alert-info alert">
                <span class="inline-half-text-left">
                    @CookiesTexts.CookiesTitle
                </span>
                <span class="inline-half-text-right">
                    <a class="btn btn-success" href="@Url.Action("Index", "Users")"><i class="fa fa-arrow-left"></i>@CookiesTexts.ButtonBackToList</a>
                </span>
            </span>
        </h3>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm("UpdateCookies", "Cookies", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.AccountId);

            <div class="form-group input-group-sm">
                @CookiesTexts.Cookies: @Html.TextAreaFor(o => o.Value, new { @class = "form-control cookies-area" })
            </div>
            <div class="form-group input-group-sm">
                @CookiesTexts.CreateDate: @Model.CreateDateTime
            </div>
            <div class="form-group input-group-sm">
                @CookiesTexts.UserAgent: @Model.UserAgent
            </div>
            <div class="">
                <input type="submit" class="btn btn-success" value="@CookiesTexts.ButtonSend" />
            </div>
        }
    </div>
</div>

