
@{
    ViewBag.Title = "Index";
}

@model Services.ViewModels.GroupModels.GroupSettingsViewModel

<h2>Group settings</h2>

@using (Html.BeginForm("UpdateGroupSettings", "GroupSettings", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="panel panel-primary">
                <div class="panel-heading">Geo Options</div>
                <div class="col-md-6 panel-body">
                    <div class="input-group">
                        <span class="width-200 input-group-addon"> Sities</span>
                        @Html.TextAreaFor(o => Model.Cities, new { @class = "form-control", cols = "40", rows = "15" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Gender:</span>
                        @Html.EnumDropDownListFor(model => model.Gender, null, new { @class = "form-control" })
                    </div>
                    <br />
                </div>
                <div class="col-md-6 panel-body">
                    <div class="input-group">
                        <span class="width-200 input-group-addon">Countries:</span>
                        @Html.TextAreaFor(o => Model.Countries, new { @class = "form-control", cols = "40", rows = "15" })
                    </div>
                    <br />
                </div>
            </div>
        </div>

        <div class="panel-body">
            <div class="panel panel-primary">
                <div class="panel-heading">Message options</div>
                <div class="panel-body">
                    <div class="">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="input-group">
                                    <span class="input-group-addon">Delay time to reply to unread messages (min.):</span>
                                    @Html.TextBoxFor(o => Model.DelayTimeSendUnread, new { @class = "form-control", @disabled = true })
                                </div>
                            </div>
                            <div class="col-lg-6"></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="input-group">
                                    <span class="input-group-addon">Delay time to answer the unanswered messages (min.):</span>
                                    @Html.TextBoxFor(o => Model.DelayTimeSendUnanswered, new { @class = "form-control", @disabled = true })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="input-group">
                                    <span class="input-group-addon">Time for extra message (min.):</span>
                                    @Html.TextBoxFor(o => Model.UnansweredDelay, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="input-group">
                                    <span class="input-group-addon">The delay time for sending messages to new friends (min.):</span>
                                    @Html.TextBoxFor(o => Model.DelayTimeSendNewFriend, new { @class = "form-control", @disabled = true })
                                </div>
                            </div>
                            <div class="col-lg-6"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
    </div>

    <div>
        <a href="@Url.Action("Index", "Groups")" class="btn btn-primary"> <i class="fa fa-arrow-left"></i> Back to list </a>
    </div>
    
    @Html.HiddenFor(x => Model.GroupId)
}
