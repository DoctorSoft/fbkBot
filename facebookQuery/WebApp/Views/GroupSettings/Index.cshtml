
@{
    ViewBag.Title = "Index";
}

@model Services.ViewModels.GroupModels.GroupSettingsViewModel

<h2>Group settings</h2>

@using (Html.BeginForm("UpdateGroupSettings", "GroupSettings", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="panel panel-primary">
                <div class="panel-heading">Geo Options</div>

                <div class="col-md-7 panel-body">
                    <div class="input-group">
                        <span class="width-200 input-group-addon">Current residence:</span>
                        @Html.TextBoxFor(o => Model.LivesPlace, new {@class = "form-control"})
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="width-200 input-group-addon">Current place of study:</span>
                        @Html.TextBoxFor(o => Model.SchoolPlace, new {@class = "form-control"})
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="width-200 input-group-addon">Current job:</span>
                        @Html.TextBoxFor(o => Model.WorkPlace, new {@class = "form-control"})
                    </div>
                </div>

                <div class="col-md-4 panel-body">
                    <div class="input-group">
                        <span class="input-group-addon">Gender:</span>
                        @Html.EnumDropDownListFor(model => model.Gender, null, new {@class = "form-control"})
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-body">
            <div class="panel panel-primary">
                <div class="panel-heading">Message options</div>
                <div class="col-md-7 panel-body">
                    <div class="input-group">
                        <span class="width-200 input-group-addon">Delay time to reply to unread messages:</span>
                        @Html.TextBoxFor(o => Model.DelayTimeSendUnread, new {@class = "form-control"})
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="width-200 input-group-addon">Delay time to answer the unanswered messages:</span>
                        @Html.TextBoxFor(o => Model.DelayTimeSendUnanswered, new {@class = "form-control"})
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="width-200 input-group-addon">The delay time for sending messages to new friends:</span>
                        @Html.TextBoxFor(o => Model.DelayTimeSendNewFriend, new {@class = "form-control"})
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
    </div>

    <div>
        <a href="@Url.Action("Index", "Groups")" class="btn btn-primary"> <i class="fa fa-arrow-left"></i> Back to list </a>
    </div>
    
    @Html.HiddenFor(x => Model.GroupId)
}
