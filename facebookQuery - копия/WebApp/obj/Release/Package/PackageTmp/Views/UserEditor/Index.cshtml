
@{
    ViewBag.Title = "Index";
}

@using WebApp.Resources.Views.UserEditor
@model Services.ViewModels.AccountModels.AccountDraftViewModel

<div class="panel panel-default">
    <div class="page-header">
        <h3>
            <span class="alert-info alert">
                <span class="inline-half-text-left">
                    @UserEditorTexts.UserEditorTitle
                </span>
                <span class="inline-half-text-right">
                    <a class="btn btn-success" href="@Url.Action("Index", "Users")"><i class="fa fa-arrow-left"></i>@UserEditorTexts.BackToList</a>
                </span>
            </span>
        </h3>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm("UpdateUser", "UserEditor", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Id);

            <div class="form-group input-group-sm">
                @UserEditorTexts.Login<span class="alert-danger">*</span>: @Html.TextBoxFor(o => o.Login, new { @class = "form-control" })
            </div>
            <div class="form-group input-group-sm">
                @UserEditorTexts.Password<span class="alert-danger">*</span>: @Html.TextBoxFor(o => o.Password, new { @class = "form-control" })
            </div>
            <div class="form-group input-group-sm">
                @UserEditorTexts.Name<span class="alert-danger">*</span>: @Html.TextBoxFor(o => o.Name, new { @class = "form-control" })
            </div>
            <div class="form-group input-group-sm">
                @UserEditorTexts.PageUrl: @Html.TextBoxFor(o => o.PageUrl, new { @class = "form-control" })
            </div>
            <div class="form-group input-group-sm">
                @UserEditorTexts.FacebookId: @Html.TextBoxFor(o => o.FacebookId, new { @class = "form-control", @type="number" })
            </div>
            <div class="form-group input-group-sm">
                @UserEditorTexts.Proxy (Ip: Port): @Html.TextBoxFor(o => o.Proxy, new { @class = "form-control" })
            </div>
            <div class="form-group input-group-sm">
                @UserEditorTexts.ProxyLogin: @Html.TextBoxFor(o => o.ProxyLogin, new { @class = "form-control" })
            </div>
            <div class="form-group input-group-sm">
                @UserEditorTexts.ProxyPassword: @Html.TextBoxFor(o => o.ProxyPassword, new { @class = "form-control" })
            </div>
            
            <div class="">
                <input type="submit" class="btn btn-success" value="@UserEditorTexts.ButtonSend" />
            </div>
        }
    </div>
</div>

