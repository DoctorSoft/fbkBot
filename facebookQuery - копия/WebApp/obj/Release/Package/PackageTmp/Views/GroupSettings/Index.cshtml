
@{
    ViewBag.Title = "Index";
}

@using WebApp.Resources.Views.Buttons
@using WebApp.Resources.Views.GroupSettings
@model Services.ViewModels.GroupModels.GroupSettingsViewModel

<h2>@GroupSettingsTexts.GroupSettingsTitle</h2>

@using (Html.BeginForm("UpdateGroupSettings", "GroupSettings", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="panel panel-primary">
                <div class="panel-heading">@GroupSettingsTexts.GeoOptions</div>
                <div class="col-md-6 panel-body">
                    <div class="input-group">
                        <span class="width-200 input-group-addon">@GroupSettingsTexts.Cities:</span>
                        @Html.TextAreaFor(o => Model.Cities, new { @class = "form-control", cols = "40", rows = "15" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">@GroupSettingsTexts.Gender:</span>
                        @Html.EnumDropDownListFor(model => model.Gender, null, new { @class = "form-control" })
                    </div>
                    <br />
                </div>
                <div class="col-md-6 panel-body">
                    <div class="input-group">
                        <span class="width-200 input-group-addon">@GroupSettingsTexts.Countries:</span>
                        @Html.TextAreaFor(o => Model.Countries, new { @class = "form-control", cols = "40", rows = "15" })
                    </div>
                    <br />
                </div>
            </div>
        </div>

        <div class="panel-body">
            <div class="panel panel-primary">
                <div class="panel-heading">@GroupSettingsTexts.RetryOptions</div>
                <div class="panel-body">
                    <div class="">
                        <div class="text-center">
                            <h3>@GroupSettingsTexts.Messages</h3>
                        </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">@GroupSettingsTexts.RetryTimeSendUnread:</span>
                                        @Html.TextBoxFor(o => Model.RetryTimeSendUnread, new { @class = "form-control" })
                                        <span class="input-group-addon">@GroupSettingsTexts.Min.</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">@GroupSettingsTexts.RetryTimeSendUnanswered:</span>
                                        @Html.TextBoxFor(o => Model.RetryTimeSendUnanswered, new { @class = "form-control" })
                                        <span class="input-group-addon">@GroupSettingsTexts.Min.</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">@GroupSettingsTexts.UnansweredDelay:</span>
                                        @Html.TextBoxFor(o => Model.UnansweredDelay, new { @class = "form-control" })
                                        <span class="input-group-addon">@GroupSettingsTexts.Min.</span>
                                    </div>
                                </div>
                            </div>

                        <div class="text-center">
                            <h3>@GroupSettingsTexts.Friends</h3>
                        </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">@GroupSettingsTexts.RetryTimeSendNewFriend:</span>
                                        @Html.TextBoxFor(o => Model.RetryTimeSendNewFriend, new { @class = "form-control" })
                                        <span class="input-group-addon">@GroupSettingsTexts.Min.</span>
                                    </div>
                                </div>
                                <div class="col-lg-6"></div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">@GroupSettingsTexts.RetryTimeConfirmFriendships:</span>
                                        @Html.TextBoxFor(o => Model.RetryTimeConfirmFriendships, new { @class = "form-control" })
                                        <span class="input-group-addon">@GroupSettingsTexts.Min.</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">@GroupSettingsTexts.RetryTimeGetNewAndRecommendedFriends:</span>
                                        @Html.TextBoxFor(o => Model.RetryTimeGetNewAndRecommendedFriends, new { @class = "form-control" })
                                        <span class="input-group-addon">@GroupSettingsTexts.Min.</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">@GroupSettingsTexts.RetryTimeRefreshFriends:</span>
                                        @Html.TextBoxFor(o => Model.RetryTimeRefreshFriends, new { @class = "form-control" })
                                        <span class="input-group-addon">@GroupSettingsTexts.Min.</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">@GroupSettingsTexts.RetryTimeSendRequestFriendships:</span>
                                        @Html.TextBoxFor(o => Model.RetryTimeSendRequestFriendships, new { @class = "form-control" })
                                        <span class="input-group-addon">@GroupSettingsTexts.Min.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <input type="submit" class="btn btn-success" value="@ButtonsTexts.ButtonSave" />
        </div>
    </div>

    <div>
        <a href="@Url.Action("Index", "Groups")" class="btn btn-primary"> <i class="fa fa-arrow-left"></i>@ButtonsTexts.ButtonBackToList</a>
    </div>
    
    @Html.HiddenFor(x => Model.GroupId)
}
